.content {
  margin-top: 30rpx;
  /* background-color: #ccc; */
  position: relative;
  z-index: 2;
}

.info {
  padding-bottom: 50rpx;
}

.city {
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  height: 90rpx;
  font-size: 36rpx;
  align-items: center;
}

.time {
  font-size: 24rpx;
}

.city .time {
  position: absolute;
  font-size: 24rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

