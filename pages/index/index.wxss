.content {
  /* margin-top: 30rpx; */
  background-color: #ccc;
  position: relative;
  z-index: 2;
}
.city{
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
}
.city .time {
  position: absolute;
  font-size: 24rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.info .temp,
.info .pm,
.info .pm view,
.info .weather {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
