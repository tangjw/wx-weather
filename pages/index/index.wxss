/**index.wxss**/

.container {
  color: #fff;
  font-size: 30rpx;
  /* font-family: "PingHei", "Helvetica Neue", "Helvetica", "Arial", "Verdana", "sans-serif"; */
}

.bcg {
  position: fixed;
  /* z-index: 2; */
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  /* background: #40a7e7; *//* background: linear-gradient(to bottom, #73C6F1, #50B5EC); */
}

/* .hello {
  background-color: #ccc;
  position: fixed;
  z-index: 2;
} */

.content {
  /* background-color: #ccc; */
  position: relative;
  z-index: 2;
}

.info {
  padding-bottom: 50rpx;
}

.city {
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  height: 90rpx;
  font-size: 36rpx;
  align-items: center;
}

.time {
  font-size: 24rpx;
}

.city .time {
  position: absolute;
  font-size: 24rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.message {
  padding: 0 20rpx;
  text-align: center;
  font-size: 22rpx;
}

.temp {
  width: 100%;
  height: 360rpx;
  font-size: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.temp text {
  height: 200rpx;
}

.num {
  font-weight: 300;
}

.weather {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.pm {
  display: flex;
  justify-content: center;
}

.pm text {
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, 0.2);
}

.guide {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  padding: 10rpx 0;
  background: rgba(6, 85, 114, 0.2);
  margin-bottom: 10rpx;
}

.guide .item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.guide .i {
  padding: 10rpx 0;
}

.livingIndex {
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
  background: rgba(6, 85, 114, 0.2);
  margin-bottom: 20rpx;
}

.livingIndex .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 0 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
}

.livingIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}

.livingIndex .right {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.livingIndex .item:last-child {
  border-bottom: none;
}

.copy {
  z-index: 2;
  position: relative;
  text-align: center;
  vertical-align: middle;
  height: 70rpx;
  font-size: 22rpx;
}

.main {
  z-index: 100;
  height: 40px;
  width: 40px;
  position: fixed;
  bottom: 150rpx;
  right: 70rpx;
  opacity: 0.6;
}
