.message {
  padding: 0 20rpx;
  text-align: center;
  font-size: 22rpx;
}

.temp {
  width: 100%;
  height: 360rpx;
  font-size: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.temp text {
  height: 200rpx;
}

.num {
  font-weight: 300;
}

.weather {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.pm {
  display: flex;
  justify-content: center;
}

.pm text {
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, 0.2);
}
